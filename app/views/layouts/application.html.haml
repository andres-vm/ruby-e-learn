%html
  %head
    %meta{description: 'Online Learning and Skill sharing platform'}/
    %meta{keywords: 'online education, course platform, video tutorials, learn, know'}/
    %meta{author: 'Andrés Valiño'}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    /%title E-Learn
    %title
      = content_for?(:title) ? yield(:title) : "E-Learn"
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = favicon_link_tag "logo_blue.png"
    = javascript_include_tag "//www.google.com/jsapi"
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"}
    %script{:src => "//netdna.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"}
    %link{:href => "//netdna.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", :rel => "stylesheet", :type => "text/css"}
    - if Rails.env.production?
      = render 'layouts/google_analytics'
  %body
    = render "layouts/header"
    = render 'layouts/messages'
    .container
      %p
      = yield
    %br
    .purple-background.text-light
      = render 'layouts/footer'
